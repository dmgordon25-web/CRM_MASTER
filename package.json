{
  "name": "crmtool",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "lint-lite": "eslint -c crm-app/.eslintrc-lite.json crm-app/js/contacts_merge.js || exit 0",
    "fix-catch": "node tools/fix_catch_syntax.js",
    "postinstall": "playwright install --with-deps",
    "ci": "npm run ci:unit",
    "ci:unit": "vitest run --reporter=basic --bail 1 --watch=false",
    "audit": "node devtools/audit.mjs",
    "test:unit": "vitest run --config vitest.config.mjs",
    "test:e2e": "playwright test",
    "sweep": "node scripts/sweep.mjs",
    "e2e:smoke": "playwright test tests/e2e/smoke.spec.js --project=chromium --workers=1 --timeout=20000 --reporter=line",
    "precommit": "node tools/precommit_check.js && npm run sweep -- --strict",
    "audit:watch": "node --watch devtools/audit.mjs",
    "audit:manifest": "node tools/manifest_audit.js",
    "test:boot": "node tools/boot_smoke_test.mjs",
    "test:navigation": "playwright test tests/e2e/navigation_editors.spec.ts --project=chromium --workers=1 --timeout=45000",
    "test:counts": "playwright test tests/e2e/action_bar_selection.spec.js --project=chromium --workers=1 --timeout=30000",
    "test:widgets": "playwright test tests/e2e/dashboard_widget_drilldown.spec.ts --project=chromium --workers=1 --timeout=20000",
    "dump:fields": "node tools/dump_fields.js",
    "verify:build": "npm run audit:manifest && npm run test:boot",
    "check:features": "node tools/feature_check.mjs",
    "check:s1": "node tools/check_suite_s1.mjs",
    "sweep:s1": "npm run verify:build && npm run check:s1",
    "check:s2": "node tools/check_suite_s2.mjs",
    "sweep:s2": "(npm run verify:build || true) && npm run check:s2"
  },
  "devDependencies": {
    "@playwright/test": "^1.39.0",
    "eslint": "^9.0.0",
    "fake-indexeddb": "^5.0.2",
    "puppeteer": "^22.15.0",
    "vitest": "^0.34.6"
  }
}
